<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_stock_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.ShowStockActivity">


    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="242dp"
        android:background="@drawable/shape_view_show_stock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_show_stock_txt_stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        tools:text="ITUB4" />

    <ImageView
        android:id="@+id/activity_show_stock_image_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_show_stock_txt_stock_name"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/activity_show_stock_txt_stock_name"
        app:srcCompat="@drawable/ic_round_arrow_back_24"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/activity_show_stock_txt_stock_corretora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto"
        android:gravity="end"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_show_stock_txt_stock_name"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/activity_show_stock_txt_stock_name"
        app:layout_constraintTop_toTopOf="@+id/activity_show_stock_txt_stock_name"
        tools:text="C6 Bank" />

    <TextView
        android:id="@+id/activity_show_stock_txt_total_spent_mock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:text="@string/total_investido"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_stock_name"
        app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_stock_name"
        app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_stock_name" />

    <TextView
        android:id="@+id/activity_show_stock_txt_total_spent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_total_spent_mock"
        app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_total_spent_mock"
        app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_total_spent_mock"
        tools:text="R$ 680.00" />

    <TextView
        android:id="@+id/activity_show_stock_txt_market_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_total_spent_mock"
        app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_total_spent_mock"
        app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_total_spent"
        tools:text="Mercado aberto" />

    <Button
        android:id="@+id/activity_show_stock_btn_exclude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/excluir"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_market_status"
        app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_market_status"
        app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_market_status" />

    <Button
        android:id="@+id/activity_show_stock_btn_add"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/adicionar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/activity_show_stock_btn_exclude"
        app:layout_constraintEnd_toStartOf="@+id/activity_show_stock_btn_exclude"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/activity_show_stock_btn_exclude" />


    <Button
        android:id="@+id/activity_show_stock_btn_finalize"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/finalizar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/activity_show_stock_btn_exclude"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/activity_show_stock_btn_exclude"
        app:layout_constraintTop_toTopOf="@+id/activity_show_stock_btn_exclude" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_show_stock_txt_average_price_mock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto"
                android:text="@string/valor_m_dio_de_suas_a_es"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activity_show_stock_txt_average_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_average_price_mock"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_average_price_mock"
                app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_average_price_mock"
                tools:text="R$ 10,00" />

            <TextView
                android:id="@+id/activity_show_stock_txt_current_value_mock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/roboto"
                android:text="@string/valor_atual"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/activity_show_stock_txt_average_price_mock" />

            <TextView
                android:id="@+id/activity_show_stock_txt_current_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_current_value_mock"
                app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_current_value_mock"
                tools:text="R$ 10,40" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/activity_show_stock_progress_current_value"
                style="@style/SpinKitView.Large.ThreeBounce"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:SpinKit_Color="@color/design_default_color_secondary"
                app:layout_constraintBottom_toBottomOf="@+id/activity_show_stock_txt_current_value"
                app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_current_value_mock"
                app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_current_value_mock"
                app:layout_constraintTop_toTopOf="@+id/activity_show_stock_txt_current_value" />


            <TextView
                android:id="@+id/activity_show_stock_txt_variation_mock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/roboto"
                android:text="@string/varia_o_total"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_current_value" />

            <TextView
                android:id="@+id/activity_show_stock_txt_total_variation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_variation_mock"
                app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_variation_mock"
                tools:text="+ 4,00 %"
                tools:textColor="@color/profit_color" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/activity_show_stock_progress_total_variation"
                style="@style/SpinKitView.Large.ThreeBounce"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:SpinKit_Color="@color/design_default_color_secondary"
                app:layout_constraintBottom_toBottomOf="@+id/activity_show_stock_txt_total_variation"
                app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_variation_mock"
                app:layout_constraintStart_toStartOf="@+id/activity_show_stock_progress_current_value"
                app:layout_constraintTop_toTopOf="@+id/activity_show_stock_txt_total_variation" />

            <View
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@color/view_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_total_variation" />


            <TextView
                android:id="@+id/activity_show_stock_txt_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/detalhes"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/view3"
                app:layout_constraintStart_toStartOf="@+id/view3"
                app:layout_constraintTop_toTopOf="@+id/view3" />

            <TextView
                android:id="@+id/activity_show_stock_txt_date_mock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:text="@string/primeira_compra"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_details"
                app:layout_constraintTop_toBottomOf="@+id/view3" />

            <TextView
                android:id="@+id/activity_show_stock_txt_first_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_quantity"
                app:layout_constraintTop_toTopOf="@+id/activity_show_stock_txt_date_mock"
                tools:text="20/12/2012" />

            <TextView
                android:id="@+id/activity_show_stock_txt_quantity_mock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/quantidade"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_date_mock"
                app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_date_mock" />

            <TextView
                android:id="@+id/activity_show_stock_txt_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/activity_show_stock_txt_quantity_mock"
                tools:text="1" />


            <TextView
                android:id="@+id/activity_show_stock_txt_profit_mock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/lucro_previsto"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_quantity_mock"
                app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_quantity_mock" />


            <TextView
                android:id="@+id/activity_show_stock_txt_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_quantity"
                app:layout_constraintTop_toTopOf="@+id/activity_show_stock_txt_profit_mock"
                tools:text="3,40" />

            <View
                android:id="@+id/view4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@color/view_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_time_expected" />

            <TextView
                android:id="@+id/activity_show_stock_txt_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/informa_es"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/view4"
                app:layout_constraintStart_toStartOf="@+id/view4"
                app:layout_constraintTop_toTopOf="@+id/view4" />

            <TextView
                android:id="@+id/activity_show_stock_txt_day_variation_mock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/variacao_dia"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_profit_mock"
                app:layout_constraintTop_toBottomOf="@+id/view4" />

            <TextView
                android:id="@+id/activity_show_stock_txt_day_variation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/activity_show_stock_txt_day_variation_mock"
                app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_profit"
                app:layout_constraintTop_toTopOf="@+id/activity_show_stock_txt_day_variation_mock"
                tools:text="23,00%" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/activity_show_stock_progress_day_var"
                style="@style/SpinKitView.Large.ThreeBounce"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                app:SpinKit_Color="@color/design_default_color_secondary"
                app:layout_constraintBottom_toBottomOf="@+id/activity_show_stock_txt_day_variation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/activity_show_stock_txt_day_variation" />

            <TextView
                android:id="@+id/activity_show_stock_txt_max_day_mock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/maxima_do_dia"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_day_variation_mock"
                app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_day_variation_mock" />

            <TextView
                android:id="@+id/activity_show_stock_txt_max_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_day_variation"
                app:layout_constraintTop_toTopOf="@+id/activity_show_stock_txt_max_day_mock"
                tools:text="23,00%" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/activity_show_stock_progress_max_day"
                style="@style/SpinKitView.Large.ThreeBounce"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                app:SpinKit_Color="@color/design_default_color_secondary"
                app:layout_constraintBottom_toBottomOf="@+id/activity_show_stock_txt_max_day"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/activity_show_stock_txt_max_day" />


            <TextView
                android:id="@+id/activity_show_stock_txt_min_day_mock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/minimo_do_dia"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_max_day_mock"
                app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_max_day_mock" />

            <TextView
                android:id="@+id/activity_show_stock_txt_min_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_max_day"
                app:layout_constraintTop_toTopOf="@+id/activity_show_stock_txt_min_day_mock"
                tools:text="23,00%" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/activity_show_stock_progress_min_day"
                style="@style/SpinKitView.Large.ThreeBounce"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                app:SpinKit_Color="@color/design_default_color_secondary"
                app:layout_constraintBottom_toBottomOf="@+id/activity_show_stock_txt_min_day"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/activity_show_stock_txt_min_day" />

            <TextView
                android:id="@+id/activity_show_stock_txt_technique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_profit_mock"
                app:layout_constraintTop_toBottomOf="@+id/view5"
                tools:text="Medias moveis 17,34" />

            <TextView
                android:id="@+id/activity_show_stock_txt_time_expected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_technique"
                app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_technique"
                tools:text="6 meses" />

            <View
                android:id="@+id/view5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/view_background"
                app:layout_constraintEnd_toEndOf="@+id/activity_show_stock_txt_profit"
                app:layout_constraintStart_toStartOf="@+id/activity_show_stock_txt_profit_mock"
                app:layout_constraintTop_toBottomOf="@+id/activity_show_stock_txt_profit_mock" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>