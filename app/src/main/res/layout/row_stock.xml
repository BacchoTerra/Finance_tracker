<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="12dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/row_stock_baseCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_rect_stock_identifier" />

            <TextView
                android:id="@+id/row_stock_txt_sotck_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/renda_variavel"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                tools:text="ITUB4" />

            <TextView
                android:id="@+id/activity_add_stock_txtInitial_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="@string/preco_medio"
                android:textColor="@color/light_text_color"
                app:layout_constraintEnd_toStartOf="@+id/activity_add_stock_txt_quantity"
                app:layout_constraintStart_toEndOf="@+id/row_stock_txt_sotck_name"
                app:layout_constraintTop_toTopOf="@+id/row_stock_txt_sotck_name" />

            <TextView
                android:id="@+id/row_stock_txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/money_symbol"
                android:textColor="@color/light_text_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/activity_add_stock_txtInitial_price"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/activity_add_stock_txtInitial_price"
                app:layout_constraintTop_toBottomOf="@+id/activity_add_stock_txtInitial_price"
                tools:text="45,45" />

            <TextView
                android:id="@+id/activity_add_stock_txt_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/quantidade"
                android:textColor="@color/light_text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/activity_add_stock_txtInitial_price" />

            <TextView
                android:id="@+id/row_stock_txt_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/light_text_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/activity_add_stock_txt_quantity"
                app:layout_constraintStart_toStartOf="@+id/activity_add_stock_txt_quantity"
                app:layout_constraintTop_toTopOf="@+id/row_stock_txt_price"
                tools:text="6" />

            <TextView
                android:id="@+id/row_stock_txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:maxLength="10"
                android:textColor="@color/light_text_color"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/row_stock_txt_sotck_name"
                app:layout_constraintTop_toBottomOf="@+id/row_stock_txt_price"
                tools:text="05/10/1998" />

            <TextView
                android:id="@+id/row_stock_txt_price_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/money_symbol"
                android:textColor="@color/light_text_color"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/row_stock_txt_quantity"
                app:layout_constraintTop_toTopOf="@+id/row_stock_txt_date"
                tools:text="R$: 45,45" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>